
@{
    ViewData["Title"] = "Measurement";
}

<h1>Measurement</h1>

<div class="form-group">
    <div class="form-group">
        <label for="measurement_nameInput">Name</label>
        <input type="text" class="form-control" id="measurement_nameInput" placeholder="Enter name">
        <label for="measurement_valueInput">Value</label>
        <input type="number" class="form-control" id="measurement_valueInput" placeholder="Enter value"/>
    </div>
    <button id="measurement_addBtn" type="button" class="btn btn-primary">Add</button>
</div>
<script src="~/js/newMeasurementSection.js" asp-append-version="true"></script>

<div class="container" id="measurements_container">

    <div class="row bg-light" data-row-type="header">
        <div class="col-sm">
            Id
        </div>
        <div class="col-sm">
            Name
        </div>
        <div class="col-sm">
            Value
        </div>
        <div class="col-sm">
            CreatedBy
        </div>
        <div class="col-sm">
            <!-- Empty column for edit button -->
        </div>
        <div class="col-sm">
            <!-- Empty column for remove button -->
        </div>
    </div>

    <div class="row">
        <div class="col-sm" data-column-type="id">
        
        </div>
        <div class="col-sm" data-column-type="name">
      
        </div>
        <div class="col-sm" data-column-type="value">
  
        </div>
        <div class="col-sm" data-column-type="createdBy">
   
        </div>
        <div class="col-sm">
            <a href="#" data-action="edit">Edit</a>
        </div>
        <div class="col-sm">
            <a href="#" data-action="remove">
                Remove
            </a>
        </div>
    </div>
</div>

<script src="~/js/measurementListSection.js" asp-append-version="true"></script>
<script src="~/js/measurementsController.js" asp-append-version="true"></script>
