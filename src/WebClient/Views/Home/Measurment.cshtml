
@{
    ViewData["Title"] = "Measurment";
}

<h1>Measurment</h1>

<div class="form-group>
    <div class="form-group">
        <label for="measurment_nameInput">Name</label>
        <input type="text" class="form-control" id="measurment_nameInput" placeholder="Enter name">
    </div>

    <div class="form-group">
        <label for="measurment_valueInput">Value</label>
        <input type="number" class="form-control" id="measurment_valueInput" placeholder="Enter value"
    </div>

    <button id="measurment_addBtn" type="button" class="btn btn-primary">Add</button>
</div>
 
<script src="~/js/newMeasurmentSection.js"></script>


<div class="container">

    <div class="row bg-light">
        <div class="col-sm">Id</div>
        <div class="col-sm">Name</div>
        <div class="col-sm">Value</div>
        <div class="col-sm">CreatedBy</div>
        <div class="col-sm">@*Empty for remove button*@</div>


    </div>
    <div class="row">
        <div class="col-sm">First column</div>
        <div class="col-sm">Second column</div>
        <div class="col-sm">Third column</div>
        <div class="col-sm">Fourth column</div>
        <div class="col-sm"><a href="#">Remove</a></div>


    </div>

</div>